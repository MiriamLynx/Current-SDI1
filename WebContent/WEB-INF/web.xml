<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>Lynxmail</display-name>
	<description>
		Lynxmail mail service
	</description>
	<context-param>
		<param-name>logLevel</param-name>
		<param-value>DEBUG</param-value>
	</context-param>
	<context-param>
		<param-name>ubicacionDelContadorDeSesiones</param-name>
		<param-value>/WEB-INF/aplicacion.properties</param-value>
	</context-param>
	<listener>
		<listener-class>com.sdi.listener.LoggingInitialization
		</listener-class>
	</listener>
	<servlet>
		<servlet-name>Controlador</servlet-name>
		<servlet-class>com.sdi.servlets.Controlador</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Controlador</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>